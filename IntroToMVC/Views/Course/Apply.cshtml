@{
    ViewData["Title"] = "Apply";
}

@model Candidate

<div class="display-6 mb-3">
    Apply
</div>

<form method="post" asp-controller="Course" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All">

    </div>

    <div class="form-group my-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Surname" class="form-label">Surname</label>
        <input type="text" class="form-control" asp-for="Surname" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Age" class="form-label">Age</label>
        <input type="number" class="form-control" asp-for="Age" min="18" max="23" value="18"/>
    </div>


    <label asp-for="SelectedCourse" class="form-label">Select One Course</label>
    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="SelectedCourse" id="mvc" value="ASP.Net Core MVC" checked>
        <label class="form-check-label" for="mvc">
            ASP.Net Core MVC
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="SelectedCourse" id="api" value="ASP.Net Core WEB API">
        <label class="form-check-label" for="api">
            ASP.Net Core WEB API
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="SelectedCourse" id="blazor" value="Blazor">
        <label class="form-check-label" for="blazor">
            Blazor
        </label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Apply</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-warning mt-3">Home</a>
</form>