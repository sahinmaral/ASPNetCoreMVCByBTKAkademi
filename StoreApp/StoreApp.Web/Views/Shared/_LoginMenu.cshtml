@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
          <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index"
            >Admin</a
          >
        </li>
    }
    <li class="nav-item">
      <a
        class="nav-link"
        asp-route-returnUrl="@Context.Request.PathAndQuery()"
        asp-area=""
        asp-controller="Account"
        asp-action="Logout"
        >Logout</a
      >
    </li>
}
else
{
    <li class="nav-item">
        @if (!Context.Request.Query.ContainsKey("returnUrl"))
        {
          <a
            class="nav-link"
            asp-route-returnUrl="@Context.Request.PathAndQuery()"
            asp-area=""
            asp-controller="Account"
            asp-action="Login"
            >Login</a
          >
        }
        else
        {
          <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login"
            >Login</a
          >
        }
    </li>
    <li class="nav-item">
        @if (!Context.Request.Query.ContainsKey("returnUrl"))
        {
          <a
            class="nav-link"
            asp-route-returnUrl="@Context.Request.PathAndQuery()"
            asp-area=""
            asp-controller="Account"
            asp-action="Register"
            >Register</a
          >
        }else
        {
        <a
            class="nav-link"
            asp-area=""
            asp-controller="Account"
            asp-action="Register"
            >Register</a
          >
        }
    </li>
}
