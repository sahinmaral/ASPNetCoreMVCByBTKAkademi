@model Product

<div class="card">

  <div class="card-body">
    <div class="card-text">
      @Model.Name
    </div>

    <div class="card-text">
      <div class="text-danger lead py-2 rounded-2">
          @Model.Price.ToString("C")
      </div>
    </div>

    <div class="card-text">
      <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Product" asp-route-id="@Model.Id">
        Edit
      </a>
    </div>
  </div>

  <div class="card-footer text-body-secondary">
    <div class="form-check form-switch ">
      <input class="form-check-input" disabled type="checkbox" asp-for="@Model.CanBeShownInShowcase">
      <label asp-for="CanBeShownInShowcase" class="form-label">Can Be Shown In Showcase</label>
    </div>
  </div>
</div>