@model List<Category>

<ul class="list-group">
    <a class="link-underline-light text-dark" asp-action="Index">
            <li class="list-group-item list-group-item-action" style="cursor:pointer">
                All Categories
            </li>
    </a>
    @foreach (Category category in Model)
    {
        <a class="link-underline-light text-dark" asp-action="Index" asp-route-categoryId="@category.Id">
            <li class="list-group-item list-group-item-action" style="cursor:pointer">
                @category.Name
            </li>
        </a>
    }
</ul>
