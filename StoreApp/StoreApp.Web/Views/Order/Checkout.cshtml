@{
    ViewData["Title"] = "Checkout";
}

@model Order

<div class="text-center display-4 lead">
    Checkout
</div>

<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-3">
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Line1">Line 1</label>
        <input type="text" class="form-control" asp-for="Line1" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Line2">Line 2</label>
        <input type="text" class="form-control" asp-for="Line2" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Line3">Line 3</label>
        <input type="text" class="form-control" asp-for="Line3" />
    </div>


    <div class="form-group my-3">
        <label asp-for="City">City</label>
        <input type="text" class="form-control" asp-for="City" />
    </div>

    <div class="form-group my-3">
        <input class="form-check-input" type="checkbox" asp-for="MustOrderWrappedAsGift" />
        <label class="form-check-label" asp-for="MustOrderWrappedAsGift">
            Order Must Wrapped As Gift
        </label>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">
            Complete Order
        </button>
    </div>
</form>