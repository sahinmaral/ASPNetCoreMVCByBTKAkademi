<div class="row">
  <div class="col-md-3">
    <div class="card bg-primary text-white">
      <div class="card-body text-center">
        <h6 class="card-subtitle mb-2">Number of</h6>
        <h5 class="card-title">Products</h5>
        <h3 class="text-center display-3 lead">
                    @await Component.InvokeAsync("ProductSummary")
        </h3>
        <a
          class="text-light card-link"
          asp-controller="Product"
          asp-action="Index"
          asp-area=""
        >
          Products
        </a>
        <a
          class="text-light card-link"
          asp-controller="Product"
          asp-action="Create"
          asp-area=""
        >
          Create Product
        </a>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-danger text-white">
      <div class="card-body text-center">
        <h6 class="card-subtitle mb-2">Number of</h6>
        <h5 class="card-title">Categories</h5>
        <h3 class="text-center display-3">
                    @await Component.InvokeAsync("CategorySummary")
        </h3>
        <a
          class="text-light card-link"
          asp-controller="Product"
          asp-action="Index"
          asp-area=""
        >
          Categories
        </a>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-warning text-white">
      <div class="card-body text-center">
        <h6 class="card-subtitle mb-2">Number of</h6>
        <h5 class="card-title">Orders in Progress</h5>
        <h3 class="text-center display-3">
                    @await Component.InvokeAsync("OrdersInProgress")
        </h3>
        <a
          class="text-light card-link"
          asp-controller="Order"
          asp-action="Index"
        >
          All Orders
        </a>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-info text-white">
      <div class="card-body text-center">
        <h6 class="card-subtitle mb-2">Number of</h6>
        <h5 class="card-title">Users</h5>
        <h3 class="text-center display-3">
            @await Component.InvokeAsync("UserSummary")
        </h3>
        <a
          class="text-light card-link"
          asp-controller="Order"
          asp-action="Index"
        >
          Users
        </a>
        <a
          class="text-light card-link"
          asp-controller="Order"
          asp-action="Index"
        >
          Create User
        </a>
      </div>
    </div>
  </div>
</div>

