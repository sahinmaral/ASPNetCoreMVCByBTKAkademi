@model ProductUpdateViewModel

<div class="display-6 mb-3">Edit</div>

<form method="post" asp-controller="Product" asp-action="Edit" enctype="multipart/form-data">
  <div class="text-danger" asp-validation-summary="All"></div>

  <input type="hidden" asp-for="@Model.Id" />
  <input type="hidden" asp-for="@Model.ImageUrl" />

  <div class="form-group my-3">
    <label asp-for="Name" class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Name" />
  </div>

  <div class="form-group my-3">
    <label asp-for="Price" class="form-label">Price</label>
    <input type="text" class="form-control" asp-for="Price" />
  </div>

  <div class="form-group my-3">
    <div class="form-check form-switch ">
      <label asp-for="CanBeShownInShowcase" class="form-label">Can Be Shown In Showcase</label>
      <input class="form-check-input" type="checkbox" asp-for="CanBeShownInShowcase">
    </div>
  </div>

  <div class="form-group my-3">
      <label asp-for="Description" class="form-label">Description</label>
      <textarea class="form-control" asp-for="Description" rows="3"></textarea>
  </div>

  <label asp-for="CategoryId" class="form-label">Category</label>
  <select
    asp-for="CategoryId"
    asp-items="@ViewBag.Categories"
    class="form-select"
  ></select>

  <div class="form-group my-3">
    <img src="~/images/@Model.ImageUrl" width="200" class="rounded shadow"/>
  </div>

  <div class="form-group my-3">
    <label asp-for="ImageUrl" class="form-label">Image</label>
    <input class="form-control" type="file" name="file">
  </div>


  <div class="btn-group" role="group">
    <a asp-controller="Product" asp-action="Index" class="btn btn-warning mt-3">
      <i class="fa fa-arrow-left"></i>
      Go Back
    </a>
    <button type="submit" class="btn btn-primary mt-3">Edit</button>
  </div>
</form>

